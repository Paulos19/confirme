generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELED
  RESCHEDULED
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id           String        @id @default(cuid())
  name         String
  phone        String        @unique
  appointments Appointment[]
  createdAt    DateTime      @default(now())
}

model Appointment {
  id        String            @id @default(cuid())
  date      DateTime
  status    AppointmentStatus @default(PENDING)
  notes     String?
  
  patientId String
  patient   Patient           @relation(fields: [patientId], references: [id])
  
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@index([date])
}

model Booking {
  id              String   @id @default(cuid())
  externalId      Int      @unique // ID vindo da API do Clinic
  patientName     String
  patientMobile   String
  doctorName      String
  dateSchedule    String   // Ex: "19/02/2026"
  hourSchedule    String   // Ex: "08:00:00:000"
  status          String   // Status original da cl√≠nica
  
  // Controle do nosso sistema
  confirmationStatus ConfirmationStatus @default(PENDING)
  n8nNotifiedAt      DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([dateSchedule])
}

enum ConfirmationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}